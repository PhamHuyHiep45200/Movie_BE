datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  USER
}

enum CategoryType {
  Phim_2D
  Phim_3D
}

model User {
  id        Int      @id @default(autoincrement())
  nameUser  String
  phone     String
  email     String
  passWord  String
  deleteFlg Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role
  Oder      Oder[]
}

model Movie {
  id          Int      @id @default(autoincrement())
  nameMovie   String
  description String
  author      String
  timeMovie   Int
  thumbnail   String[]
  deleteFlg   Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  movieCategoryId Int?
  movieCategory   MovieCategory? @relation(fields: [movieCategoryId], references: [id])

  ShowtimesMovie ShowtimesMovie[]
}

model MovieCategory {
  id        Int      @id @default(autoincrement())
  name      String
  deleteFlg Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Movie     Movie[]
}

model ShowtimesMovie {
  id         Int @id @default(autoincrement())
  idShowTime Int
  idMovie    Int

  movie     Movie     @relation(fields: [idMovie], references: [id])
  showTime  Showtimes @relation(fields: [idShowTime], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Showtimes {
  id            Int      @id @default(autoincrement())
  time          DateTime
  scheduledFare Int
  deleteFlg     Boolean
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  showtimesOder   Oder             @relation(fields: [showtimesOderId], references: [id])
  showtimesOderId Int
  Room            Room[]
  ShowtimesMovie  ShowtimesMovie[]
}

model Oder {
  id        Int      @id @default(autoincrement())
  deleteFlg Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userOder  User        @relation(fields: [userId], references: [id])
  userId    Int
  Showtimes Showtimes[]
  Coupon    Coupon[]
}

model Room {
  id          Int      @id @default(autoincrement())
  name        String
  numberChair Int
  deleteFlg   Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  showtimesRoom   Showtimes @relation(fields: [showtimesRoomId], references: [id])
  showtimesRoomId Int
}

model Coupon {
  id        Int      @id @default(autoincrement())
  name      String
  discount  Int
  deleteFlg Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  couponOder   Oder @relation(fields: [couponOderId], references: [id])
  couponOderId Int
}

model Slide {
  id        Int      @id @default(autoincrement())
  link      String
  image     String
  deleteFlg Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
